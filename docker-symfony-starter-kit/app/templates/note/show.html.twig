{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Note details'|trans({'%id%': note.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'Note details'|trans({'%id%': note.id|default('')}) }}</h1>
    {% if note is defined and note|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'ID'|trans }}</dt>
            <dd>{{ note.id }}</dd>
            <dt>{{ 'Created at'|trans }}</dt>
            <dd>{{ note.createdAt|format_date('long') }}</dd>
            <dt>{{ 'Updated at'|trans }}</dt>
            <dd>{{ note.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'Title'|trans }}</dt>
            <dd>{{  note.title }}</dd>
            <dt>{{ 'Category'|trans }}</dt>
            <dd>{{  note.category.title }}</dd>
        </dl>
        <p>
            <a class="btn btn-outline-primary" href="{{ url('note_index') }}" title="{{ 'Return'|trans }}">
                {{ 'Return'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'Record not found'|trans }}
        </p>
    {% endif %}
{% endblock %}